{
    "name": "prestashop/promotions-countdown",
    "description": "Modulo PrestaShop per promozioni countdown",
    "type": "prestashop-module",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "PromotionsCountdown\\": "promotionscountdown/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PromotionsCountdown\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}
